<div class="row">
    <div class="col-md-12">
          <h2 style="margin-top: 2em;">Posts</h2>
          <div class="table-responsive">
            <table class="table ">
                
                <thead >
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>

                    
                    {{#each posts}}
                    <tr>
                       
                        <td>{{this.id}}</td>
                        <td>{{this.body}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.postdate}}</td>
                        <td> <a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                        <td>{{this.published}}</td>
                        

                      
                    </tr>
                    {{/each}}

                    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong> 
    </div>
    {{/unless}}
   

    </div>
</div>
